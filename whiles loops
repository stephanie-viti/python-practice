x = 1
sum = 0
while x < 10:
    sum = sum + x
    x = x + 1

product = 1
while x < 10:
    product = product * x
    x = x + 1
print(sum, product)
#Ouput 45 1 # no es el resultado esperado porque nos olvidamos incicializar el segundo bloque

def count_down(start_number):
 current = start_number
 while (current > 0):
    print(current)
    current -= 1
print("Zero!")

count_down(3)
