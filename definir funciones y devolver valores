def greeting(name):
    print("Welcome, " + name)
    
greeting("Kay")
greeting("Cameron")   #imprime: Bienvenida, Kay
                                Bienvenido, Cameron

def greeting(name, department):
    print("Welcome, " + name)
    print("You are part of " + department)
    
greeting("Blake", "Software engineering")
greeting("Ellis", "Software engineering")     #imprime Bienvenido, Blake
                                                Eres parte de la ingeniería de software
                                                Bienvenido, Ellis
                                              Eres parte de la ingeniería de software                                   
RETURN

def area_triangle(base, height):
    return base*height/2
area_a = area_triangle(5,4)
area_b = area_triangle(7,3)
sum = area_a + area_b
print("The sum of both areas is: " + str(sum))
#imprime: La suma de ambas áreas es: 20,5

def convert_seconds(seconds):
    hours = seconds // 3600
    minutes = (seconds - hours * 3600) // 60
    remaining_seconds = seconds - hours * 3600 - minutes * 60
    return hours, minutes, remaining_seconds
 
hours, minutes, seconds = convert_seconds(5000)
print(hours, minutes, seconds)
#imprime: 1 13 20

def greeting(name):
    print("Welcome, " + name)
result = greeting("Christine")
# imprime "welcome christine"
print(result)
